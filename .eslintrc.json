{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error", // Show Prettier issues as errors
    "no-unused-vars": "warn", // ES6 warning
    "no-undef": "error", // ES6 error
    "prefer-const": "warn", // Suggest const over let if not reassigned
    "no-var": "warn" // Warn if using var instead of let/const
  }
}
